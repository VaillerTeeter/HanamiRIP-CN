{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HanamiRIP CN",
  "version": "0.1.0",
  "identifier": "com.hanamirip.cn",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build/frontend"
  },
  "app": {
    "windows": [
      {
        "title": "HanamiRIP CN",
        "width": 1360,
        "height": 820,
        "resizable": false,
        "maximizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "window-controls",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-start-dragging",
            "dialog:allow-open",
            "dialog:allow-save"
          ]
        }
      ]
    }
  },
  "bundle": {
    "icon": ["../public/icons/icon.ico", "../public/icons/icon.png", "../public/icons/icon.svg"],
    "targets": ["nsis"]
  }
}
